{
  "name": "nextjs-tour",
  "version": "1.0.7",
  "type": "module",
  "description": "A beautiful, customizable tour/onboarding system for Next.js applications with Lottie animation support",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles.css": "./dist/styles.css"
  },
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "prepare": "npm run build",
    "test": "jest",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix"
  },
  "keywords": [
    "nextjs",
    "react",
    "tour",
    "onboarding",
    "guide",
    "tutorial",
    "walkthrough",
    "spotlight",
    "lottie",
    "animation",
    "typescript"
  ],
  "author": {
    "name": "wpstorm",
    "email": "wpstormdev@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/esradev/nextjs-tour.git"
  },
  "homepage": "https://github.com/esradev/nextjs-tour#readme",
  "bugs": {
    "url": "https://github.com/esradev/nextjs-tour/issues"
  },
  "peerDependencies": {
    "framer-motion": ">=6.0.0",
    "next": ">=12.0.0",
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "optionalDependencies": {
    "lottie-react": ">=2.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.0.0",
    "eslint-plugin-react": "^7.0.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "jest": "^29.0.0",
    "postcss": "^8.5.6",
    "rollup": "^3.0.0",
    "rollup-plugin-dts": "^5.0.0",
    "rollup-plugin-peer-deps-external": "^2.0.0",
    "rollup-plugin-postcss": "^4.0.2",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.0.0"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/esradev"
  },
  "sideEffects": false,
  "engines": {
    "node": ">=16.0.0"
  }
}
